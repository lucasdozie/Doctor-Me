<%= render 'admin/shared/dashboardHeader' %>
<h1 class="fa fa-file-text"><%= @title %></h1><span>manage users</span>
<div class="content-box content-box-inner top-content-box">
	<div class="ct-header">
		<h1><%= @title %></h1>
		<span class="fa fa-plus c-new dir-right"><%= link_to "New", {:action => 'new'} %></span>
	</div>
	<div class="ct-body">
		<span class="new-user"><%= link_to "Create User", {:action => 'new'} %></span>
	</div>
</div>
<div class="content-box content-box-inner">
	<div class="ct-header">
		<h1><%= @title %></h1>
		<span class="fa fa-plus c-new dir-right"><%= link_to "New", {:action => 'new'} %></span>
	</div>
	<div class="ct-body">
	<% @blogs.each do |blog| %>
	  <h3><%= blog.title.html_safe %></h3>
	  <p><%= blog.body.html_safe %></p>
	  <%= link_to "Edit Blog", edit_admin_blog_path(blog) %>
	  <% if blog != @blogs.last %>
	  <hr />
	  <% end %>
	<% end %>
	</div>
</div>

<%= render 'admin/shared/dashboardFooter' %>